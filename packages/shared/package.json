{
  "name": "@clafoutis/shared",
  "version": "0.1.0",
  "description": "Shared utilities for Clafoutis",
  "author": "Dessert Labs",
  "license": "BUSL-1.1",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint:check": "eslint src",
    "lint:write": "eslint src --fix",
    "format:check": "prettier --check src",
    "format:write": "prettier --write src",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@clafoutis/tsup-config": "workspace:*",
    "@clafoutis/typescript-config": "workspace:*",
    "@types/node": "^22.15.27"
  }
}
