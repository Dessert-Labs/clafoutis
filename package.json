{
  "name": "clafoutis",
  "version": "0.0.0",
  "private": true,
  "description": "GitOps powered design system generator - generate and sync design tokens",
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint:check",
    "lint:fix": "turbo lint:write",
    "format": "turbo format:check",
    "format:fix": "turbo format:write",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "clean": "turbo clean && rm -rf node_modules",
    "release:publish": "pnpm turbo build && npx tsx scripts/changeset-publish.ts"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@clafoutis/eslint-config": "workspace:*",
    "@clafoutis/prettier-config": "workspace:*",
    "@clafoutis/vitest-config": "workspace:*",
    "husky": "^8.0.3",
    "tsup": "^8.5.0",
    "turbo": "^1.13.0",
    "typescript": "^5.8.3"
  }
}
